{
  "expo": {
    "name": "H2Flow",
    "slug": "h2flow-fasting",
    "version": "1.0.0",
    "sdkVersion": "53.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.h2flow.fastingapp",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "background-fetch",
          "background-processing"
        ],
        "NSUserNotificationUsageDescription": "This app uses notifications to remind you about water intake and fasting milestones.",
        "NSHealthShareUsageDescription": "This app integrates with HealthKit to track your fasting progress.",
        "NSHealthUpdateUsageDescription": "This app can update your health data with fasting information."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.h2flow.fastingapp",
      "versionCode": 1,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-notifications",
      "expo-background-fetch",
      "expo-task-manager",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#3B82F6",
          "image": "./assets/splash.png",
          "dark": {
            "backgroundColor": "#1E293B",
            "image": "./assets/splash-dark.png"
          }
        }
      ]
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#3B82F6",
      "androidMode": "default",
      "androidCollapsedTitle": "H2Flow"
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
